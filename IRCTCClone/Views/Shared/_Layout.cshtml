<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - IRCTC Clone</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    @using Microsoft.AspNetCore.Http
    @inject IHttpContextAccessor HttpContextAccessor

    <header class="site-header">
        <div class="header-container">
            <div class="logo-section">
                <img src="~/images/irctc_logo.png" alt="IRCTC Logo" class="logo" />
                <span class="brand-name">IRCTC Clone</span>
            </div>

            <nav class="nav-links">
                <a href="/">🏠 Home</a>

                @{
                    // Check for admin session
                    var adminUser = HttpContextAccessor.HttpContext.Session.GetString("AdminUser");
                }

                @if (!string.IsNullOrEmpty(adminUser))
                {
                    <!-- Admin Logged In -->
                    <a asp-controller="Admin" asp-action="Dashboard" class="welcome-text">
                        👋 Welcome, @adminUser
                    </a>
                    <a href="#" onclick="confirmLogout()" class="logout-btn" style="display:inline">Logout</a>

                    <script>
                        function confirmLogout() {
                            if (confirm("Are you sure you want to logout?")) {
                                window.location.href = "/Admin/Logout";
                            }
                        }
                    </script>
@* 
                    <form asp-controller="Admin" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" class="logout-btn">🚪 Logout</button>
                    </form> *@
                }
                else if (User?.Identity?.IsAuthenticated == true)
                {
                    <!-- ✅ Normal User Logged In -->
                    var username = User.Identity.Name?.Split('@')[0];
                    <span class="welcome-text">👋 Welcome, @username </span>
@*                     @if (User.Identity.IsAuthenticated)
                    {
                        <a href="/Account/Profile" class="nav-link">Profile</a>
                        <form method="post" action="/Account/Logout">
                        </form>
                    }
                    else
                    {
                        <a href="/Account/Login" class="nav-link">Login</a>
                    } *@
                    <a href="/Booking/History" class="history-btn">📄 My Bookings</a>
                    <form method="post" action="/Account/Logout" style="display:inline;">
                        <button type="submit" class="logout-btn">🚪 Logout</button>
                    </form>
                }
                else
                {
                    <!-- ✅ Not Logged In -->
                    <a asp-controller="Admin" asp-action="AdminLogin">🧑‍💼 Admin Login</a>
                    <a href="/Account/Login">🔐 Login</a>
                    <a href="/Account/Register">📝 Register</a>
                }
            </nav>
        </div>
    </header>

    <main role="main" class="main-content flex-grow-1">
        @RenderBody()
    </main>

    <footer class="site-footer">
        © 2025 IRCTC Clone — All Rights Reserved
    </footer>

    <script>
        // Prevent going back to secured pages
        window.history.pushState(null, "", window.location.href);
        window.onpopstate = function () {
            window.history.pushState(null, "", window.location.href);
        };
    </script>

    <!-- ✅ Load scripts first -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.2/rollups/aes.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script> 
    
    <script src="~/js/backhandle.js" asp-append-version="true"></script> 
    <script src="~/js/site.min.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.4/xlsx.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/emoji-mart@latest/dist/browser.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script id="signalrjs" src="~/js/signalr/dist/browser/signalr.js"></script>

    <!-- ✅ Then render page-specific scripts -->
    @RenderSection("Scripts", required: false)

