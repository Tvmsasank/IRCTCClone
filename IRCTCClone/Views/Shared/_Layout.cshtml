<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - IRCTC Clone</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @using Microsoft.AspNetCore.Http
    @inject IHttpContextAccessor HttpContextAccessor

    <header class="site-header">
        <div class="header-container">
            <div class="logo-section">
                <img src="~/images/irctc_logo.png" alt="IRCTC Logo" class="logo" />
                <span class="brand-name">IRCTC Clone</span>
            </div>

            <nav class="nav-links">
                <a href="/">🏠 Home</a>

                @{
                    // Check for admin session
                    var adminUser = HttpContextAccessor.HttpContext.Session.GetString("AdminUser");
                }

                @if (!string.IsNullOrEmpty(adminUser))
                {
                    <!-- Admin Logged In -->
                    <a asp-controller="Admin" asp-action="Dashboard" class="welcome-text">
                        👋 Welcome, @adminUser
                    </a>
                    <form asp-controller="Admin" asp-action="Logout" method="post" style="display:inline;">
                        <button type="submit" class="logout-btn">🚪 Logout</button>
                    </form> 
                }
                else if (User?.Identity?.IsAuthenticated == true)
                {
                    <!-- ✅ Normal User Logged In -->
                    var username = User.Identity.Name?.Split('@')[0];
                    <span class="welcome-text">👋 Welcome, @username </span>
                    <a href="/Booking/History" class="history-btn">📄 My Bookings</a>
                    <form method="post" action="/Account/Logout" style="display:inline;">
                        <button type="submit" class="logout-btn">🚪 Logout</button>

                    </form>
                }
                else
                {
                    <!-- ✅ Not Logged In -->
                    <a asp-controller="Admin" asp-action="AdminLogin">🧑‍💼 Admin Login</a>
                    <a href="/Account/Login">🔐 Login</a>
                    <a href="/Account/Register">📝 Register</a>
                }
            </nav>
        </div>
    </header>

    <main role="main" class="main-content">
        @RenderBody()
    </main>

    <footer class="site-footer">
        © 2025 IRCTC Clone — All Rights Reserved
    </footer>

    <!-- ✅ Load scripts first -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- ✅ Bootstrap (optional, but after jQuery) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- ✅ Your site.js (must come last) -->
    <script src="~/js/site.js"></script>

    <!-- ✅ Then render page-specific scripts -->
    @RenderSection("Scripts", required: false)
</body>
</html>
