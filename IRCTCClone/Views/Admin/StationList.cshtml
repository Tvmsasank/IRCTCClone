@model IEnumerable<IRCTCClone.Models.Station>
@{
    ViewData["Title"] = "Station List";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h3 class="mb-3">@ViewData["Title"]</h3>
    <a asp-action="CreateStation" class="btn btn-success mb-3">+ Add Station</a>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover small">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Code</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td>@s.Id</td>
                        <td>@s.Code</td>
                        <td>@s.Name</td>
                        <td>
                            <a asp-action="EditStation" asp-route-id="@s.Id" class="btn btn-sm btn-primary me-1">Edit</a>
                            <form asp-action="DeleteStation" asp-route-id="@s.Id" method="post" style="display:inline">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
