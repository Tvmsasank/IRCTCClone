@model IRCTCClone.Models.Train
@{
    ViewData["Title"] = "Confirm Train Route";
}

<h2>Confirm Train Route</h2>

<div class="alert alert-warning">
    <strong>Warning:</strong> @ViewBag.WarningMessage
</div>

<div class="train-summary">
    <p><strong>Train:</strong> @Model.Number - @Model.Name</p>
    <p><strong>From:</strong> @Model.FromStation.Code - @Model.FromStation.Name</p>
    <p><strong>To:</strong> @Model.ToStation.Code - @Model.ToStation.Name</p>
</div>

<form method="post" asp-action="ProceedWithRoute" asp-controller="Booking">
    <input type="hidden" name="trainId" value="@Model.Id" />
    <button type="submit" class="btn btn-success">Continue with this train</button>
    <a href="@Url.Action("SearchTrain", "Home")" class="btn btn-danger">Go Back to Search</a>
</form>
